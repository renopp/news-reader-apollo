{
	"name": "news-reader",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "webpack-dev-server --mode development --hot",
		"start": "serve -s dist",
		"format": "prettier --write \"src/**/*.js\"",
		"eslint-fix": "eslint --fix \"src/**/*.js\"",
		"build": "webpack --mode production --progress",
		"codegen": "apollo client:codegen operation-types.flow.js --target=flow --outputFlat --useFlowExactObjects",
		"apollo:schema": "apollo schema:download --endpoint=https://news-mock-api.herokuapp.com/v1/graphql graphql-schema.json",
		"apollo:generate": "apollo codegen:generate --localSchemaFile=graphql-schema.json --excludes=node_modules/* --includes=src/**/*.js --addTypename --target=flow --tagName=gql types --passthroughCustomScalars"
	},
	"dependencies": {
		"@researchgate/react-intersection-observer": "^1.0.5",
		"apollo": "^2.21.1",
		"apollo-cache-inmemory": "^1.6.2",
		"apollo-client": "^2.6.4",
		"apollo-link": "^1.2.12",
		"apollo-link-batch-http": "^1.2.13",
		"apollo-link-error": "^1.1.11",
		"apollo-link-http": "^1.5.15",
		"dotenv-webpack": "^1.7.0",
		"graphql": "^14.5.8",
		"graphql-tag": "^2.10.1",
		"immutable": "^4.0.0-rc.12",
		"react": "^16.8.6",
		"react-apollo": "^2.5.8",
		"react-content-loader": "^4.2.2",
		"react-dom": "npm:@hot-loader/react-dom",
		"react-feather": "^2.0.3",
		"react-router": "^5.0.1",
		"react-router-dom": "^5.0.1",
		"slate": "^0.47.4",
		"slate-plain-serializer": "^0.7.6",
		"slate-react": "^0.22.4",
		"styled-components": "^4.3.2"
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-flow": "^7.0.0",
		"@babel/preset-react": "^7.0.0",
		"babel-eslint": "^10.0.2",
		"babel-loader": "^8.0.6",
		"babel-polyfill": "^6.26.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.4",
		"css-loader": "^3.1.0",
		"eslint": "^6.1.0",
		"eslint-config-prettier": "^6.0.0",
		"eslint-config-problems": "^3.0.1",
		"eslint-config-react": "^1.1.7",
		"eslint-loader": "^2.2.1",
		"eslint-plugin-flowtype": "^3.12.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.14.3",
		"file-loader": "^4.1.0",
		"html-webpack-plugin": "^3.2.0",
		"node-sass": "^7.0.0",
		"prettier": "^1.18.2",
		"react-hot-loader": "^4.12.9",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"terser-webpack-plugin": "^1.3.0",
		"webpack": "^4.38.0",
		"webpack-cli": "^3.3.6",
		"webpack-dev-server": "^3.7.2"
	}
}
